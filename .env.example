# Happy Coder - Environment Variables

# Local AI Configuration
# Enable Local AI integration for privacy-focused, offline-capable AI models
# Copy this file to .env and customize as needed

# Core Local AI Settings
# Enable Local AI integration
# Type: boolean
# Default: false
EXPO_PUBLIC_LOCAL_AI_ENABLED=false

# Local AI provider type
# Type: string (ollama, lmstudio, custom)
# Default: ollama
EXPO_PUBLIC_LOCAL_AI_PROVIDER=ollama

# Local AI server endpoint URL
# Type: string
# Default: http://localhost:11434
EXPO_PUBLIC_LOCAL_AI_ENDPOINT=http://localhost:11434

# Model name to use for inference
# Type: string
# Default: llama3.2
# Options: llama3.2, llama3.2:70b, codellama, mistral, phi3
EXPO_PUBLIC_LOCAL_AI_MODEL=llama3.2

# Performance Settings
# Context window size in tokens (512-32768)
# Type: number
# Default: 4096
HAPPY_LOCAL_AI_CONTEXT_SIZE=4096

# Model temperature for response randomness (0.0-2.0)
# Type: number
# Default: 0.7
HAPPY_LOCAL_AI_TEMPERATURE=0.7

# Number of CPU threads for inference (1-64)
# Type: number
# Default: 4
HAPPY_LOCAL_AI_THREADS=4

# Enable GPU acceleration
# Type: boolean
# Default: true
HAPPY_LOCAL_AI_GPU=true

# Multiple Endpoints (Optional)
# Use different models for different purposes

# Coding assistant endpoint
# HAPPY_LOCAL_AI_CODING_ENDPOINT=http://localhost:11434
# HAPPY_LOCAL_AI_CODING_MODEL=codellama

# Documentation and explanation endpoint
# HAPPY_LOCAL_AI_DOCS_ENDPOINT=http://localhost:11435
# HAPPY_LOCAL_AI_DOCS_MODEL=llama3.2

# Voice Processing (Optional)
# Use local voice processing instead of cloud services

# Enable local voice processing
# Type: boolean
# Default: false
HAPPY_VOICE_LOCAL=false

# Local speech-to-text endpoint
# HAPPY_VOICE_STT_ENDPOINT=http://localhost:9000

# Local text-to-speech endpoint
# HAPPY_VOICE_TTS_ENDPOINT=http://localhost:9001

# Other App Settings
# PostHog analytics key (optional)
# EXPO_PUBLIC_POSTHOG_API_KEY=

# RevenueCat keys (for in-app purchases)
# EXPO_PUBLIC_REVENUE_CAT_APPLE=
# EXPO_PUBLIC_REVENUE_CAT_GOOGLE=
# EXPO_PUBLIC_REVENUE_CAT_STRIPE=

# Debug Settings
# Enable debug logging
# EXPO_PUBLIC_DEBUG=1

# Server URL (for development)
# EXPO_PUBLIC_HAPPY_SERVER_URL=http://localhost:3005
